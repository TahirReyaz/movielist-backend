{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES6",
    "sourceMap": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./",
    "noImplicitAny": true,
    "baseUrl": "./src",
    "rootDir": "./",
    "paths": {
      "*": ["*", "src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
